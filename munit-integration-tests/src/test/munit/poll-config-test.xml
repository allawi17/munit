<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:script="http://www.mulesoft.org/schema/mule/scripting"
      xmlns:mock="http://www.mulesoft.org/schema/mule/mock"
      xmlns:munit="http://www.mulesoft.org/schema/mule/munit"
      xmlns:mclient="http://www.mulesoft.org/schema/mule/mclient"
      xmlns:synchronize="http://www.mulesoft.org/schema/mule/synchronize"
      xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
            http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
            http://www.mulesoft.org/schema/mule/scripting http://www.mulesoft.org/schema/mule/scripting/current/mule-scripting.xsd
            http://www.mulesoft.org/schema/mule/mock http://www.mulesoft.org/schema/mule/mock/current/mule-mock.xsd
            http://www.mulesoft.org/schema/mule/mclient http://www.mulesoft.org/schema/mule/mclient/current/mule-mclient.xsd
             http://www.mulesoft.org/schema/mule/synchronize http://www.mulesoft.org/schema/mule/synchronize/current/mule-synchronize.xsd">

    <munit:config mock-connectors="false" mock-inbounds="false"/>
    <mclient:config stopPollsByDefault="true"/>



    <spring:beans>
        <spring:import resource="poll-config.xml"/>
    </spring:beans>


    <script:script name="mockTaskList" engine="groovy"><![CDATA[

            List<String> lists = new ArrayList<String>();
            lists.add("task1");

			return lists;
		]]>
    </script:script>

    <munit:test name="whenJiraIsCorrectLogMessage"
                description="If Jira Does not fail then we log the message Everything OK">


        <mock:when messageProcessor="jira:create-issue">
            <mock:then-return payload-ref="#[string:OK]"/>
        </mock:when>

        <synchronize:run-and-wait timeout="4000" runAsyc="true">
        <mclient:schedule-poll ofFlow="jira-mock-exampleFlow2"/>
        </synchronize:run-and-wait>

        <mock:verify-call messageProcessor="jira:create-issue"/>

    </munit:test>


</mule>